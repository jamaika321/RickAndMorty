<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickAndMorty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="heroes_card_text">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">sans-serif-smallcaps</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#02042B</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="layout_constraintVertical_bias">0.05</item>
        <item name="layout_constraintHorizontal_bias">0.08</item>
    </style>
    <style name="heroes_card_interface_text">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">sans-serif-smallcaps</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#02042B</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="layout_constraintVertical_bias">0.05</item>
        <item name="layout_constraintHorizontal_bias">0.08</item>
    </style>
</resources>